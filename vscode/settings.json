{
    "python.pythonPath": "/usr/bin/python3",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "$HOME/.local/bin/flake8",
    "python.linting.flake8Args": [
        "--ignore=E201,E202,E501,E226",
        "--doctests"
    ],
    "vim.statusBarColorControl": false,
    "vim.handleKeys": {
        "<C-c>": false,
        "<C-v>": false,
        "<C-f>": false,
        "<C-h>": false,
        "<C-S-f>": false,
        "<C-S-h>": false,
        "<C-p>": false
    },
    "extensions.ignoreRecommendations": true,
    "editor.acceptSuggestionOnEnter": "off",
    "explorer.confirmDragAndDrop": false,
    "editor.fontFamily": "'DejaVu Sans Mono'",
    "editor.fontSize": 14,
    "editor.lineHeight": 21,
    "editor.letterSpacing": 0.5,
    "editor.fontLigatures": true,
    "editor.glyphMargin": true,
    "files.trimTrailingWhitespace": true,
    "editor.fontWeight": "500",
    "editor.cursorStyle": "line",
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        80,
        100,
        120
    ],
    "terminal.integrated.rendererType": "dom",
    "editor.wordWrap": "on",
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/venv/**": true,
        "**/__pycache__/**": true
    },
    "editor.cursorBlinking": "smooth",
    "breadcrumbs.enabled": true,
    "files.exclude": {
        "**/node_modules/**": true,
        "**/venv/**": true
    },
    "editor.tabCompletion": "on",
    "editor.multiCursorModifier": "ctrlCmd",
    "workbench.startupEditor": "newUntitledFile",
    "lldb.executable": "lldb-7",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.detectIndentation": false,
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[vue]": {
        "editor.tabSize": 2
    },
    "[javascriptreact]": {
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.tabSize": 2
    },
    "[rust]": {
        "editor.formatOnSave": true
    },
    "terminal.integrated.fontSize": 16,
    "rust.clippy_preference": "on",
    "workbench.settings.editor": "json",
    "latex-workshop.view.pdf.viewer": "browser",
    "rust-client.enableMultiProjectSetup": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "C_Cpp.updateChannel": "Insiders",
    "python.showStartPage": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.cppStandard": "c++17",
    "diffEditor.ignoreTrimWhitespace": false,
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "python.venvFolders": [
        "environments"
    ],
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "editor.formatOnSave": false,
    "clangd.path": "/usr/bin/clangd",
    "clangd.restartAfterCrash": true,
    "C_Cpp.intelliSenseEngine": "disabled",
    "[c]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
        "editor.tabSize": 2
    },
    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
        "editor.tabSize": 2
    },
    "files.associations": {
        "*.scss": "scss",
        "*.jsm": "javascript"
    },
    "codeQL.telemetry.enableTelemetry": false,
    "workbench.colorTheme": "SynthWave '84",
    "codeQL.cli.executablePath": "/home/lion/codeql/codeql/codeql",
    "[python]": {
        "editor.formatOnType": true
    },
}
